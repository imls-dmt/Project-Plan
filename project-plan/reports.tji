taskreport breakdown "reports/ProjectBreakdown" {
  formats html, csv
  caption "IMLS Master Project Breakdown"
  headline "IMLS Master Project Breakdown"
  columns name {width 300}, effort {width 100 scale hour}, chart {width 700 scale quarter}
  hidetask treelevel() > 4
  # Don't hide any resource, meaning show them all.
  hideresource 0
  # rolluptask summary_report
  sorttasks tree, index.up
 
}

taskreport breakdown_noresources "reports/ProjectBreakdown-NoResources" {
  formats html,csv
  caption "IMLS Task Summary - Excluding Resources"
  headline "IMLS Master Project Breakdown"
  columns name {width 300}, effort {width 100 scale hour}, chart {width 700 scale quarter}
  hidetask treelevel() > 4
  # Don't hide any resource, meaning show them all.
  hideresource 1
  # rolluptask summary_report
  sorttasks tree, index.up
  
}

resourcereport resource_summary "reports/ResourceSummaryReport" {
	formats html,csv
	headline "Resource Summary Report"
	caption "Summary of IMLS Project Resources (effort in hours)"
	columns name, balance, cost, effort, quarterly
	loadunit hours
	balance project_costs award
	sortresources tree
	start ${projectstart}
}

resourcereport resource_summary_Y1 "reports/ResourceSummaryReport_y1" {
	formats html,csv
	headline "Resource Summary Report"
	caption "Summary of IMLS Project Resources (effort in hours)"
	columns name, balance, cost, effort, monthly
	loadunit hours
	balance project_costs award
	sortresources tree
	start ${projectstart}
	end %{${projectstart} + 1y}
}

