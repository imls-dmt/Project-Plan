textreport frame "" {
	textreport index "reports/Overview" {
		formats html
		center '<[report id = "resource_summary"]>'
		center '<[report id = "resource_summary_Y1"]>'
		center '<[report id = "resource_summary_Y2"]>'
		center '<[report id = "resource_summary_Y3"]>'
	}
}